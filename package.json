  "description": "MCP server for Spica integration with OpenAI research tools - manage buckets, functions, data, and intelligent document search",
  "main": "dist/index.js",
  "bin": {
    "spica-mcp-server": "dist/index.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "package.json"
  ],
  "scripts": {
